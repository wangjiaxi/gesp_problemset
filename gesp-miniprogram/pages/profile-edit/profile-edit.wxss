/* pages/profile-edit/profile-edit.wxss */
.container {
  background-color: #F8F8F8;
  min-height: 100vh;
  padding: 20rpx;
}

/* 头像区域 */
.avatar-section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  position: relative;
  margin-bottom: 20rpx;
}

.avatar-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #E5E5E5;
  transition: all 0.3s ease;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-container:active .avatar-overlay {
  opacity: 1;
}

.avatar-tip {
  color: #FFFFFF;
  font-size: 22rpx;
  text-align: center;
}

.avatar-desc {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

/* 昵称区域 */
.nickname-section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.nickname-container {
  padding: 20rpx 0;
}

.nickname-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  transition: background-color 0.3s ease;
}

.nickname-container:active .nickname-content {
  background-color: #F0F0F0;
}

.nickname-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.nickname-arrow {
  color: #CCCCCC;
  font-size: 24rpx;
}

.nickname-tip {
  font-size: 24rpx;
  color: #999999;
  padding-left: 20rpx;
}

/* 预览区域 */
.preview-section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-preview {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #4169E1 0%, #6495ED 100%);
  border-radius: 12rpx;
  color: #FFFFFF;
}

.preview-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #FFFFFF;
  margin-right: 20rpx;
}

.preview-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.preview-nickname {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.preview-desc {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 说明信息区域 */
.info-section {
  margin-bottom: 20rpx;
}

.info-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.info-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 操作按钮区域 */
.action-section {
  padding: 20rpx 0;
}

.reset-btn {
  background-color: #FF6B6B;
  color: #FFFFFF;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none;
  width: 100%;
}

.reset-btn:active {
  background-color: #FF5252;
}
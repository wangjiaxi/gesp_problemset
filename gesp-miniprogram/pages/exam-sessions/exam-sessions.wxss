/* pages/exam-sessions/exam-sessions.wxss */
.container {
  background-color: #F8F8F8;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #4169E1 0%, #6A5ACD 100%);
  padding: 40rpx 30rpx 50rpx;
  color: #FFFFFF;
}

.header-content {
  text-align: center;
}

.level-badge {
  display: inline-block;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 考试场次列表 */
.sessions-container {
  padding: 30rpx 20rpx;
}

.session-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.session-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.session-main {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.session-info {
  flex: 1;
}

.session-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.session-date {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.session-languages {
  display: flex;
  gap: 8rpx;
}

.language-tag {
  background-color: #F0F4FF;
  color: #4169E1;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.session-status {
  margin-left: 20rpx;
}

.status-badge {
  color: #FFFFFF;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  text-align: center;
  min-width: 80rpx;
}

.session-arrow {
  margin-left: 20rpx;
  color: #CCCCCC;
}

.arrow-icon {
  font-size: 28rpx;
  font-weight: bold;
}

/* 底部提示 */
.bottom-tip {
  padding: 40rpx 30rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.5;
}
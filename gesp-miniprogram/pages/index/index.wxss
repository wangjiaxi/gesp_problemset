/* pages/index/index.wxss */
.container {
  padding-bottom: 0;
  background-color: #F8F8F8;
}

/* 搜索框样式 */
.search-container {
  padding: 20rpx;
  background-color: #4169E1;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-placeholder {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 轮播图样式 */
.banner-container {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 等级选择网格样式 */
.level-container {
  padding: 20rpx;
  background-color: #F8F8F8;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.level-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: none;
}

.level-item:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.level-badge {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.level-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  text-align: center;
}

/* 加载和空状态样式 */
.loading, .empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 28rpx;
}
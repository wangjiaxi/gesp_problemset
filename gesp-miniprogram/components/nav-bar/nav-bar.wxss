/* components/nav-bar/nav-bar.wxss */
.nav-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.nav-bar-content {
  display: flex;
  height: 100rpx;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #999999;
}

.nav-item.active .nav-text {
  color: #4169E1;
}

.nav-bar-safe-area {
  height: env(safe-area-inset-bottom);
  background-color: #FFFFFF;
}
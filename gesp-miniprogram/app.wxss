/**app.wxss**/
/* 导入公共样式 */
@import "./styles/common.wxss";

/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    'PingFang SC', 'Microsoft YaHei', 'Source Han Sans SC', 'Noto Sans CJK SC',
    'WenQuanYi Micro Hei', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333333;
  background-color: #F8F8F8;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  padding: 20rpx;
  overflow: hidden;
}

/* 标题样式 */
.title {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 16rpx;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 14px;
  text-align: center;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #4169E1;
  color: #FFFFFF;
}

.btn-secondary {
  background-color: #87CEFA;
  color: #FFFFFF;
}

.btn-outline {
  border: 1px solid #4169E1;
  color: #4169E1;
  background-color: transparent;
}

/* 分割线 */
.divider {
  height: 1px;
  background-color: #EEEEEE;
  margin: 20rpx 0;
}

/* 文本溢出省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 多行文本溢出省略 */
.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-around {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }
.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.pt-10 { padding-top: 10rpx; }
.pt-20 { padding-top: 20rpx; }
.pb-10 { padding-bottom: 10rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pl-10 { padding-left: 10rpx; }
.pl-20 { padding-left: 20rpx; }
.pr-10 { padding-right: 10rpx; }
.pr-20 { padding-right: 20rpx; }

/* 文本对齐 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

/* 文本颜色 */
.text-primary { color: #4169E1; }
.text-secondary { color: #87CEFA; }
.text-success { color: #52C41A; }
.text-warning { color: #FAAD14; }
.text-danger { color: #F5222D; }
.text-muted { color: #999999; }

/* 背景颜色 */
.bg-primary { background-color: #4169E1; }
.bg-secondary { background-color: #87CEFA; }
.bg-white { background-color: #FFFFFF; }
.bg-light { background-color: #F8F8F8; }
.bg-success { background-color: #52C41A; }
.bg-warning { background-color: #FAAD14; }
.bg-danger { background-color: #F5222D; }

/* 徽章 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 12px;
  line-height: 1;
}

.badge-primary {
  background-color: #4169E1;
  color: #FFFFFF;
}

.badge-secondary {
  background-color: #87CEFA;
  color: #FFFFFF;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

/* 无数据提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
}

/* 底部安全区域 */
.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}